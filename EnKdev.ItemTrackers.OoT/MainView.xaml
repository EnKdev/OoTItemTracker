                <Image.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding ToggleNayruCommand}"/>
                </Image.InputBindings>
            </Image>
            <!-- Item Row 4 -->
            <Image Source="{Binding Bottle1Image}" Width="50" Margin="-350, 245, 0, 0">
                <Image.InputBindings>
