            </Image>
            <Image Source="{Binding FaroresWindImage}" Width="50" Margin="330, -65, 0, 0">
                <Image.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding ToggleFaroreCommand}"/>
                </Image.InputBindings>
            </Image>
            <!-- Item Row 3 -->
            <Image Source="{Binding BoomerangImage}" Width="50" Margin="-345, 105, 0, 0">
                <Image.InputBindings>
